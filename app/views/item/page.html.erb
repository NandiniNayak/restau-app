<h1>Listing the menu items</h1>

<div class = "row">
<% @menus.each do |menu| %>
   <% if menu.availability == true %>
    <div class ="col-md-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">
                <%= menu.name %>
               <span class = "badge pull-right">
                   $<%= menu.price %>
               </span>
            </h3>
          </div>
          <div class="panel-body">
           <p><%= menu.description %></p>
           <p><%= image_tag(menu.image, width:"100%",height:"100%") %></p>
          </div>
        </div>
    </div>
    <% end %>
<% end %>
</div>